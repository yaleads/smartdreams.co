      <!-- copyright , scrollTo Top -->
      <div class="footer-bar">
        <div class="container">
          <span class="copyright">ООО "Мастерская развлечений" - <a href="/">Мир квестов</a></span>
          <a class="toTop" href="#topNav">В начало<i class="fa fa-arrow-circle-up"></i></a>
        </div>
      </div>
      <!-- copyright , scrollTo Top -->


      <!-- footer content -->
      <div class="footer-content">
        <div class="container">

          <div class="row">


            <!-- FOOTER CONTACT INFO -->
            <div class="column col-sm-4 col-md-4">
              <p class="lead">Контакты:</p>
              <address class="font-opensans">
                <ul>
                  <li class="footer-sprite address">
                    Москва, Дербеневская наб., д. 7, стр. 2
                  </li>
                  <li class="footer-sprite phone">
                    +7 (499) 322-15-24 или +7 (812) 407-14-23
                  </li>
                  <li class="footer-sprite email">
                    <a href="mailto:support@yourname.com">contact@worldofquests.ru</a>
                  </li>

                </ul>
              </address>

            </div>
            <!-- /FOOTER CONTACT INFO -->

            <!-- FOOTER CONTACT INFO -->
            <div class="column col-sm-4 col-md-4">
              <!--<h3>Добавить квест на сайт:</h3>-->

              <p>
                <%= link_to 'Как разместить квест на сайте mir-kvestov.ru?', root_path %> <br /><br />


                Вы владелец квеста в реальности? - Пишите нам на
                <a href="mailto:contact@worldofquests.ru">contact@worldofquests.ru</a>
              </p>

              <p>Ищете интересную работу? - <a href="<%= root_path %>">Вакансии в компании "Мир Квестов"</a>
              </p>
            </div>
            <!-- /FOOTER CONTACT INFO -->

            <!-- FOOTER CONTACT INFO -->
            <div class="column col-sm-4 col-md-4 text-right">
              <noindex>
                <a href="http://vk.com/worldofquests" target="_blank" rel="nofollow"><i class="fa fa-vk" style="font-size: 100pt;"></i></a>
                &nbsp;
                &nbsp;
                &nbsp;
                <a href="http://instagram.com/worldofquests/" target="_blank" rel="nofollow"><i class="fa fa-instagram" style="font-size: 100pt;"></i></a>
                &nbsp;
                &nbsp;
                &nbsp;
              </noindex>


            </div>
            <!-- /FOOTER CONTACT INFO -->




          </div>

        </div>
      </div>
      <!-- footer content -->

    </footer>
    <!-- /FOOTER -->
  </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
